# PolarDB Daily Check Configuration
# Database Connection Settings

# Hostname or IP address of the PolarDB instance
export PGHOST="127.0.0.1"

# Port number (default: 5432)
export PGPORT="5432"

# Database username (should have sufficient privileges for monitoring)
export PGUSER="digoal"

# Password for the database user (optional - can use .pgpass instead)
export PGPASSWORD=""

# Database name to connect to (usually 'postgres' or your application database)
export PGDATABASE="postgres"

# Connection timeout in seconds
export PGTIMEOUT="30"

# SSL connection (true/false)
export PGSSLMODE="prefer"

# Optional: Path to SSL certificate files (if required)
# export PGSSLCERT="/path/to/client.crt"
# export PGSSLKEY="/path/to/client.key"
# export PGSSLROOTCERT="/path/to/root.crt"
